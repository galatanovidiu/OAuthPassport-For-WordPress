{
	"name": "oauthpassport/oauth-passport",
	"description": "MCP-compliant OAuth 2.1 authorization server for WordPress",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"minimum-stability": "stable",
	"prefer-stable": true,
	"require": {
		"php": ">=8.0",
      "ext-openssl": "*"
    },
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"php-stubs/wordpress-stubs": "^6.8",
		"phpcompatibility/php-compatibility": "^9.3",
		"phpstan/phpstan": "^1.10",
		"szepeviktor/phpstan-wordpress": "^1.3",
		"phpunit/phpunit": "^10.0",
		"roave/security-advisories": "dev-latest",
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^3.0",
		"yoast/phpunit-polyfills": "^2.0"
	},
	"autoload": {
		"psr-4": {
			"OAuthPassport\\": "includes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"OAuthPassport\\Tests\\": "tests/"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"optimize-autoloader": true,
		"sort-packages": true
	},
	"scripts": {
		"test": "phpunit",
		"test:wp-env": "wp-env run tests-wordpress bash -c \"cd /var/www/html/wp-content/plugins/OAuthPassport && vendor/bin/phpunit --configuration phpunit-wp-env.xml\"",
		"test:coverage": "phpunit --coverage-html coverage",
		"test:coverage:wp-env": "wp-env run tests-wordpress bash -c \"cd /var/www/html/wp-content/plugins/OAuthPassport && vendor/bin/phpunit --configuration phpunit-wp-env.xml --coverage-html coverage\"",
		"phpcs": "phpcs --standard=phpcs.xml.dist",
		"phpcbf": "phpcbf --standard=phpcs.xml.dist",
		"phpstan": "phpstan analyse",
		"security-check": "composer audit",
		"lint": [
			"@phpcs",
			"@phpstan"
		],
		"fix": "@phpcbf",
		"check": [
			"@lint",
			"@test"
		]
	},
	"extra": {
		"wordpress-plugin-slug": "oauth-passport",
		"installer-name": "oauth-passport"
	},
	"keywords": [
		"wordpress",
		"plugin",
		"mcp",
		"model-context-protocol",
		"oauth",
		"oauth2",
		"oauth2.1",
		"authentication",
		"authorization",
		"jwt",
		"api"
	],
	"authors": [
		{
			"name": "Ovidiu Galatan",
			"email": "galatanovidiu@gmail.com",
			"homepage": "https://github.com/galatanovidiu"
		}
	],
	"support": {
		"issues": "https://github.com/galatanovidiu/oauth-passport/issues",
		"source": "https://github.com/galatanovidiu/oauth-passport",
		"docs": "https://github.com/galatanovidiu/oauth-passport/wiki"
	}
}
